<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PalEats.Views.NavigationComponent">

    <StackLayout Orientation="Horizontal" BackgroundColor="{StaticResource MainHeadandNavbarColor}" Spacing="70" Margin="-7" HeightRequest="50" Padding="80,0,90,0">
        <ImageButton  BackgroundColor="{StaticResource MainHeadandNavbarColor}"   Source="search.png"  Clicked="Button_search_Clicked" Aspect="AspectFit" WidthRequest="30" HeightRequest="26"  />
        <ImageButton  BackgroundColor="{StaticResource MainHeadandNavbarColor}" Source="home.png" Aspect="AspectFit"  WidthRequest="40" HeightRequest="35"  Clicked="Button_Home_Clicked" />
        <ImageButton  BackgroundColor="{StaticResource MainHeadandNavbarColor}" Source="favorite.png" Aspect="AspectFit" WidthRequest="28.67" HeightRequest="26"  Clicked="Button_favorite_Clicked"   />
    </StackLayout>
</ContentView>